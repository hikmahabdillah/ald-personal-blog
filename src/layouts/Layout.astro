---
import Navbar from "../components/Navbar.astro";
import "../styles/global.css";
import { Github, Instagram, Linkedin } from "@lucide/astro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="min-h-screen w-full max-w-5xl mx-auto p-4">
      <Navbar />
      <!-- sidebar social media -->
      <aside class="fixed bottom-0 flex flex-col items-center gap-4">
        <a href=""><Github /></a>
        <a href=""><Linkedin /></a>
        <a href=""><Instagram /></a>
        <div class="h-44 w-0.5 bg-neutral-900"></div>
      </aside>
      <!-- sidebar email -->
      <aside
        class="fixed top-32 right-0 lg:right-auto xl:right-1/12 2xl:right-[15%] flex flex-col items-center mr-5 gap-4"
      >
        <div class="h-44 w-0.5 bg-neutral-900"></div>
        <a
          href="mailto:hikmahaldrin44@gmail.com"
          class="[writing-mode:vertical-rl] font-medium tracking-widest text-sm hover:text-neutral-500 transition"
          >hikmahaldrin44@gmail.com</a
        >
      </aside>
      <slot />
    </div>
    <div class="min-h-screen"></div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
