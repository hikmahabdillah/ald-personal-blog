---
import { Image } from "astro:assets";
import notFoundImage from "../assets/404-not-found.webp";
import Layout from "../layouts/Layout.astro";

const metaData = {
  title: "Page Not Found",
  description:
    "The page you are looking for does not exist. Return to Aldrin's Personal Blog homepage.",
};
---

<Layout title={metaData.title} description={metaData.description}>
  <main class="min-h-screen flex flex-col items-center justify-center gap-10-">
    <div class="w-full h-auto max-w-xs">
      <Image src={notFoundImage} alt="404 Not Found" class="mb-12 mx-auto" />
    </div>
    <section class="text-center px-4">
      <h1 class="text-2xl lg:text-4xl font-bold mb-4">404 - Page Not Found</h1>
      <p class="text-secondary mb-6 text-sm lg:text-lg">
        Oops! The page you're looking for doesn't exist. It might have been
        moved or deleted.
      </p>
      <a
        href="/"
        class="inline-block px-6 py-3 bg-primary text-white font-medium rounded-full hover:bg-primary/90 transition"
        >Go Back Home</a
      >
    </section>
  </main>
</Layout>
