---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import avatarBlog from "../assets/writing-pose.webp";
import ArticleSection from "../components/section/ArticleSection.astro";

const metaData = {
  title: "Home | Aldrin's Blog",
  description:
    "Welcome to Aldrin's Personal Blog, where I share my thoughts on tech and life.",
};
---

<Layout title={metaData.title} description={metaData.description}>
  <main
    class="w-full mx-auto lg:ml-17 mt-36 flex flex-col items-center justify-center relative max-w-4xl"
  >
    <!-- Hero Section -->
    <section
      class="flex sm:justify-between gap-8 w-full sm:flex-row flex-col justify-center sm:items-center pl-11 sm:pl-0"
    >
      <header class="sm:ms-10 lg:ms-0">
        <h1 class="text-4xl sm:text-6xl font-bold leading-tight">
          Aldrin's <br />Thoughts
        </h1>
        <p class="text-secondary font-medium mt-4">
          Here, I write about tech and life.
        </p>
      </header>
      <Image
        src={avatarBlog}
        class="w-full max-w-48 -z-10 me-10 lg:me-0 -mb-4"
        alt="Writing Pose"
      />
    </section>
    <!-- Article Section -->
    <ArticleSection />
  </main>
</Layout>
